# main.py ‚Äî mant√©m vivo e executa o bot periodicamente
import os
import threading
import time
from flask import Flask
import subprocess

app = Flask(__name__)

@app.route("/")
def home():
    return "‚úÖ Portal SimonSports ‚Äî Bot de Loterias ativo!"

def executar_bot():
    while True:
        try:
            print("üöÄ Executando bot.py automaticamente...")
            subprocess.run(["python", "bot.py"], check=True)
        except Exception as e:
            print(f"‚ö†Ô∏è Erro ao executar bot.py: {e}")
        print("üïí Pr√≥xima execu√ß√£o em 10 minutos...")
        time.sleep(600)  # 10 min (ajuste se quiser)
        
if __name__ == "__main__":
    t = threading.Thread(target=executar_bot, daemon=True)
    t.start()
    app.run(host="0.0.0.0", port=int(os.environ.get("PORT", 5000)))